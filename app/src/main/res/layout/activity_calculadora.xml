<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="#ffffff"
    android:orientation="vertical">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"
        android:padding="0dp"
        android:rowCount="7">

        <Button
            android:id="@+id/Clean"
            android:layout_margin="2dp"
            android:background="#b41001"
            android:onClick="borrar"
            android:text="Exit"
            android:textColor="#e8eaea" />

        <Button
            android:id="@+id/Divide"
            android:layout_margin="2dp"
            android:background="#b41001"
            android:onClick="Division"
            android:text="/"
            android:textColor="#e8eaea" />

        <Button
            android:id="@+id/Multiplica"
            android:layout_margin="2dp"
            android:background="#b41001"
            android:onClick="Multiplicacion"
            android:text="X"
            android:textColor="#e8eaea" />

        <Button
            android:id="@+id/Borrar"
            android:layout_margin="2dp"
            android:background="#b41001"
            android:onClick="Clear"
            android:text="Borrar"
            android:textColor="#e8eaea" />

        <Button
            android:id="@+id/Siete"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Siete"
            android:text="7"
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Ocho"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Ocho"
            android:text="8"
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Nueve"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Nueve"
            android:text="9"
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Resta"
            android:layout_margin="2dp"
            android:background="#b41001"
            android:onClick="Resta"
            android:text="-"
            android:textColor="#e8eaea" />

        <Button
            android:id="@+id/Cuatro"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Cuatro"
            android:text="4"
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Cinco"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Cinco"
            android:text="5"
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Seis"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Seis"
            android:text="6"
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Suma"
            android:layout_margin="2dp"
            android:background="#b41001"
            android:onClick="Suma"
            android:text="+"
            android:textColor="#e8eaea" />

        <Button
            android:id="@+id/Uno"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Uno"
            android:text="1"
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Dos"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Dos"
            android:text="2"
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Tres"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Tres"
            android:text="3"
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Igual"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:background="#b41001"
            android:onClick="Igual"
            android:text="="
            android:textColor="#e8eaea" />

        <Button
            android:id="@+id/Cero"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Cero"
            android:text="0"
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Pi"
            android:layout_columnSpan="1"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Pi"
            android:text="Ï€"
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Punto"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Punto"
            android:text="."
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Tan"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Tangente"
            android:text="tan"
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Sin"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Seno"
            android:text="sin"
            android:textColor="#b41001" />

        <Button
            android:id="@+id/Cos"
            android:layout_margin="2dp"
            android:background="#e8eaea"
            android:onClick="Coseno"
            android:text="cos"
            android:textColor="#b41001" />


    </GridLayout>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="15dp"
        android:text="Rad"
        tools:checked="false" />

    <EditText
        android:id="@+id/Caja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingRight="10dp"
        android:textSize="36sp"
        android:textStyle="bold" />
</RelativeLayout>
